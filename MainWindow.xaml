            </ColorAnimationUsingKeyFrames>
			<ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(TextElement.Foreground).(SolidColorBrush.Color)" Storyboard.TargetName="txtdias">

                <EasingColorKeyFrame KeyTime="0:0:0.444" Value="White"/>

                <EasingColorKeyFrame KeyTime="0:0:1" Value="Red"/>

                <EasingColorKeyFrame KeyTime="0:0:1.556" Value="White"/>

                <EasingColorKeyFrame KeyTime="0:0:2" Value="Red"/>

                <EasingColorKeyFrame KeyTime="0:0:2.556" Value="White"/>

                <EasingColorKeyFrame KeyTime="0:0:3" Value="Red"/>

                <EasingColorKeyFrame KeyTime="0:0:3.444" Value="White"/>

